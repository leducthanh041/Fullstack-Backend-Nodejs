<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Delete A User</title>
  </head>

  <body>
    <!-- <%= JSON.stringify(userEdit) %> -->
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/create">Create Users</a>
    </div>

    <div class="form-add-new">
      <form action="/delete-user " method="post">
        <fieldset>
          <legend>Delete a user</legend>

          <div class="input-group d-none">
            <label for="">Id: </label>
            <input type="text" id="userId" name="userId" value="<%= userEdit.id %>" />
          </div>

          <div class="input-group">
            <label for="">Are you sure to delete this user with Email: </label>
            <input
              type="text"
              id="emailId"
              name="email"
              value="<%= userEdit.email %>"
            />
          </div>

          <div>
            <button>Confirm</button>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>
